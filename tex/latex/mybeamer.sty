% my own beamer template
\ProvidesPackage{mybeamer}
\author{Jialin Xin}

\usetheme{Madrid}
\usefonttheme{serif}

\definecolor{fudanblue}{RGB}{14,65,156}
\definecolor{fudanred}{RGB}{204,26,26}

\setbeamercolor{structure}{fg=fudanblue}

\setbeamertemplate{sections/subsections in toc}[square]

\setbeamertemplate{itemize item}[triangle]
\setbeamertemplate{itemize subitem}[circle]
\setbeamertemplate{itemize subsubitem}[circle]

\setbeamertemplate{enumerate item}[square]
\setbeamertemplate{enumerate subitem}[circle]
\setbeamertemplate{enumerate subsubitem}[circle]

\setbeamertemplate{bibliography item}[triangle]
\setbeamercolor{bibliography entry location}{fg=fudanblue!70!white}

\beamertemplatenavigationsymbolsempty

\endinput
