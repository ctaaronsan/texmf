\newcommand*{\@innerpStar}[3]{\@innerp*{#1}{#2}{#3}\@emptySup}
% set definition (taken from the mathtools doc)
\providecommand\given{}
\newcommand\SetSymbol[1][]{%
  \mathchoice{\:}{\:}{\,}{\,}#1\vert
   \allowbreak
   \mathchoice{\:}{\:}{\,}{\,}
   \mathopen{}
}
% usage: \Set{elements}, or \Set{elements \given conditions}
